<div id="app" class="flex flex-col h-screen justify-center items-center w-full ">
  <a id="search-button" href="/" class="flex items-center justify-around bg-gradient-to-r h-12 from-cyan-500 to-blue-500 hover:bg-blue-700 hover:cursor-pointer text-white font-bold py-2 px-4 rounded mb-4">
    Back to search
  </a>
  <div class="analytics-area w-full flex justify-center">
    <div class="w-[50%] py-4 border border-solid border-slate-400 rounded shadow-md bg-white">
      <p class="font-bold text-center mb-4 text-blue-400">Frequently Searched Articles</p>
      <hr class="last:hidden border-4">
      <div id="analytics-area">
        <div class="flex justify-between">
          <p class="mx-4 my-2 w-[80%]">Query</p>
          <p class="mx-4 my-2 w-[10%]">Count</p>
          <p class="mx-4 my-2 w-[10%]">Ip</p>
        </div>
         <hr class="last:hidden border-4">
        <% @searches.each do |search| %>
          <div class="flex justify-between">
            <p class="mx-4 my-2 w-[80%]"><%= search[0][0] %></p>
            <p class="mx-4 my-2 w-[10%]"><%= search[1] %></p>
            <p class="mx-4 my-2 w-[10%]"><%= search[0][1] %></p>
          </div>
          <hr class="last:hidden">
        <% end %>
      </div>
    </div>
  </div>
</div>

